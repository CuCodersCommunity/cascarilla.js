{
    "compilerOptions": {
      "outDir": "dist",
      "module": "ESNext",
      "target": "ESNext",
      "declaration": true,
      "declarationDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "emitDeclarationOnly": true,
      "allowJs": false,
      "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  